pipeline {
    agent any

    tools {
        nodejs 'nodejs-22-6-0'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies without auditing
                    sh 'npm install --no-audit'
                }
            }
        }
            stage('Installing Dependencies') {
                options { timestamps() }
                steps {
                    sh 'npm install --no-audit'
                }
            }
        }
    }    